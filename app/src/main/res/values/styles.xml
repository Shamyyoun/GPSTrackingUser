<resources>

    <style name="FormTextField" parent="android:Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="FormSecondaryActionButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/form_secondary_button_padding</item>
    </style>

    <style name="TopBarIcon">
        <item name="android:background">@drawable/clickable_item</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">@dimen/top_bar_icon_padding</item>
    </style>

    <style name="TabsBarSeperator">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
