<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- full screen theme -->
    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <!-- full screen red theme -->
    <style name="FullScreenTheme.Red">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- full screen white theme -->
    <style name="FullScreenTheme.White">
        <item name="colorAccent">@color/primary</item>
    </style>

    <!-- actionbar theme -->
    <style name="ActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

</resources>